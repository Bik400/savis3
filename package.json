{
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cypress": "^13.3.3",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "cors": "^2.8.5"
  },
  "scripts": {
    "client": "cd Savis3 && ng serve",
    "server": "cd server && npm run dev",
    "dev": "concurrently --kill-others \"npm run client\" \"npm run server\"",
    "clientInstall": "cd Savis3 && npm install",
    "serverInstall": "cd server && npm install",
    "install": "concurrently --kill-others \"npm run clientInstall\" \"npm run serverInstall\""
  }
}
